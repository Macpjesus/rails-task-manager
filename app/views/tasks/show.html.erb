<h1><%= @task.title %></h1>

<%= link_to edit_task_path(@task) do %>
  <button>Edit this task</button>
<% end %>

<div>
  <h3>  <%= @task.details %> </h3>
</div>

<div>
  <input disabled type="checkbox" name="task" <%= @task.completed ? "checked" : "" %> >
  <label for="task"> <%= @task.completed ? "This task is completed" : "This task is not completed yet" %> </label>
</div>

<div>
  <footer> <%= link_to "Back to list" , tasks_path %></footer>
</div>
